{
  "require": {
    "ext-json": "*",
    "twig/twig": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "Test\\": "tests/",
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3"
  },
  "scripts": {
    "phpunit": [
      "XDEBUG_MODE=coverage php vendor/bin/phpunit --coverage-html coverage"
    ]
  }
}